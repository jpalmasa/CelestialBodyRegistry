module Utils where

import Daml.Script

data Parties = Parties with
    issuer: Party
    discoverer: Party 

setupParties: (Text, Text) -> Text ->  Script Parties
setupParties (issuerName, discovererName) discovererHint = script do
    issuer <- allocateParty issuerName
    discoverer <- allocatePartyWithHint discovererName (PartyIdHint discovererHint)

    pure Parties with ..
